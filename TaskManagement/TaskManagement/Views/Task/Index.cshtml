@model List<TaskManagement.Models.Task>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4>Tasks List</h4>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="New">New Task</a>
        </div>

    </div>
    <table class="table table-hover table-bordered">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Task in Model)
            {
                <tr>
                    <td>@Task.Id</td>
                    <td>@Task.Name</td>
                    <td>@Task.Description</td>
                    <td>@Task.DueDate.ToString("dd-MM-yyyy")</td>
                    <td><a class="btn btn-primary" asp-action="Update" asp-route-id="@Task.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@Task.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>